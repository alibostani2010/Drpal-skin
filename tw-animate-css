/* Minimal animations used as a local fallback for `@import "tw-animate-css";` */
@keyframes fade-in { from { opacity: 0 } to { opacity: 1 } }
@keyframes slide-up { from { transform: translateY(8px); opacity: 0 } to { transform: translateY(0); opacity: 1 } }

.fade-in { animation: fade-in 300ms both; }
.slide-up { animation: slide-up 300ms both; }
